# EMD Cloud API Configuration
EMD_API_TOKEN=your-emd-api-token-here
EMD_APP_ID=app-xxxxxxxx

# ISR Cache Settings (in seconds)
# Time before Next.js regenerates cached pages (default: 600 = 10 minutes)
REVALIDATE_TIME=600

# API Performance Settings
# Maximum number of parallel requests to EMD Cloud API (default: 5)
# Higher values = faster loading but more server load
# Recommended: 3-5 for self-hosted, 10-20 for Vercel/cloud platforms
PARALLEL_REQUESTS_LIMIT=5

# Page size for pagination requests (default: 100)
# Higher values = fewer requests but larger responses
PAGE_SIZE=100

# Collection IDs
TEST_COLLECTION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Main Collections
TOURNAMENTS_COLLECTION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
